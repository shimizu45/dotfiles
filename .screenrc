# Encoding
defencodig utf-8

# Prefix Key
escape ^Jj

# set scrollback
defscrollback 1000000

# Delete sartt up screen
startup_message off

# Enable Auto detach
autodetach on

# logging
log on
deflog on
logfile "/Users/shimizusatsuki/screen/log/screen-%Y%m%d-%n.log"


# Show date and screen list
hardstatus alwayslastline "%{= kw}%-Lw%{= yk}%n%f* %t%{= kw}%+Lw %{= kw}%=%{= kw} %y/%m/%d %c "

cjkwidth off
defutf8 on
defbce on
term xterm-256color
defencoding utf8
encoding utf8 utf8

